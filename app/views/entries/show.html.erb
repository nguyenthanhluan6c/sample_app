<% provide(:title, @entry.title) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>

     <section class="stats">
      <%= render 'shared/stats' %>
    </section>

  </aside>
  <div class="col-md-8">  
    <%= render @entry %>
  <h3>Comments (<%= @entry.comments.count %>)</h3>
  <% if @can_comment %>
  <section class="comment_form">
        <%= render 'shared/comment_form' %>
 </section>
 <% end %>
  <ol class="comments">
    <%= render @comments %>
  </ol>
  <%= will_paginate @comments %>
  </div>

</div>